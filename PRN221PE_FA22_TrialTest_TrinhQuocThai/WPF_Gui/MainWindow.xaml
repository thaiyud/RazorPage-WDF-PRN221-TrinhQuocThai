<Window x:Class="WPF_Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Gui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblEmail" Content="Email:" HorizontalAlignment="Left" Margin="216,115,0,0" VerticalAlignment="Top" Width="56" FontSize="18"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="316,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="314" Height="40"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="207,183,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="188,275,0,0" VerticalAlignment="Top" Click="BtnLogin_Click" FontSize="16" Width="198" Height="34"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="432,275,0,0" VerticalAlignment="Top" Click="BtnCancel_Click"  FontSize="16" Width="198" Height="34"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="316,171,0,0" VerticalAlignment="Top" Width="314" Height="46"/>

    </Grid>
</Window>
